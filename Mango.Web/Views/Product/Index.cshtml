@model IEnumerable<ProductDto>


<div class="row p-4 border">
    <div class="col">
        <h1 class="text-primary">Product List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-action="CreateProduct" class="btn btn-outline-primary">
            Create new Product
        </a>
    </div>

    <div class="col-12 mt-3">

        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CategoryName</td>
                        <td>@((item.Price).ToString("c"))</td>
                        <td>
                            <a asp-action="EditProduct" asp-route-id="@item.ProductId" class="mr-2">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="mr-2 text-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
